<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="f25.cs157a.evergreenbank.Controllers.LoanController">

    <top>
        <HBox fx:id="topBar" styleClass="top-bar" prefHeight="120" alignment="CENTER" spacing="40">
            <Label text="Logout"
                   onMouseClicked="#onBackToMain"
                   styleClass="top-bar-label"/>
            <Pane HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <center>
        <StackPane alignment="TOP_CENTER">
            <VBox alignment="TOP_CENTER">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>

                <BorderPane styleClass="content-outline"
                            prefWidth="900"
                            maxWidth="900">

                    <center>
                        <VBox alignment="TOP_LEFT" spacing="24">
                            <padding>
                                <Insets top="24" right="24" bottom="24" left="24"/>
                            </padding>

                            <VBox spacing="8" alignment="TOP_LEFT">
                                <Label text="Loan Summary"
                                       styleClass="section-header"/>

                                <Label fx:id="totalBalanceLabel"
                                       text="Total Balance: $0.00"/>

                                <Label fx:id="unpaidLoanLabel"
                                       text="Unpaid Loan: $0.00"/>
                            </VBox>

                            <Separator/>

                            <HBox spacing="40" alignment="TOP_LEFT">

                                <VBox spacing="12" alignment="TOP_LEFT">
                                    <Label text="Request a Loan"
                                           styleClass="section-header"/>

                                    <Label text="Loan amount"
                                           styleClass="account-label"/>
                                    <TextField fx:id="loanAmountField"
                                               promptText="Enter loan amount"
                                               styleClass="underline-field"/>

                                    <Button text="Submit Loan Request"
                                            onAction="#submitLoanRequest"
                                            prefWidth="180"
                                            styleClass="user-buttons"/>
                                </VBox>

                                <VBox spacing="12" alignment="TOP_LEFT">
                                    <Label text="Repay Loan"
                                           styleClass="section-header"/>

                                    <Label text="Repayment amount"
                                           styleClass="account-label"/>
                                    <TextField fx:id="repaymentAmountField"
                                               promptText="Enter repayment amount"
                                               styleClass="underline-field"/>

                                    <Label text="Pay from account"
                                           styleClass="account-label"/>
                                    <ChoiceBox fx:id="accountChoiceBox"
                                               prefWidth="180">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Checkings"/>
                                                <String fx:value="Savings"/>
                                            </FXCollections>
                                        </items>
                                    </ChoiceBox>

                                    <Button text="Submit Loan Repayment"
                                            onAction="#submitLoanRepayment"
                                            prefWidth="180"
                                            styleClass="user-buttons"/>
                                </VBox>

                            </HBox>
                        </VBox>
                    </center>

                </BorderPane>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <StackPane>
            <HBox spacing="20" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="12" right="40" bottom="20" left="40"/>
                </padding>

                <Button text="Back"
                        onAction="#backToDashboard"
                        styleClass="user-buttons"/>
            </HBox>
            
        </StackPane>
    </bottom>

</BorderPane>
